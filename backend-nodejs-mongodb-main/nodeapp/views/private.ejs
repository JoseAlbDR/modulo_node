<% include cabecera.ejs %>

<!-- Basic features section-->
<section class="bg-light">
  <div class="container px-5">
    <div
      class="row gx-5 align-items-center justify-content-center justify-content-lg-between"
    >
      <div class="col-12 col-lg-5">
        <h2 class="display-4 lh-1 mb-4"><%= __("Private Zone") %></h2>
      </div>
      <div class="col-12 col-lg-5">
        <p>User: <%= email %></p>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col"><a href="/agents-new">New Agent</a></th>
          </tr>
        </thead>
        <tbody>
          <% agents.forEach(agent => { %>
          <tr>
            <th scope="row"><%= agent.id %></th>
            <td><%= agent.name %></td>
            <td><%= agent.age %></td>
            <td>
              <a
                onclick="confirmDeleteAgent('<%= agent.name %> ', '<%= agent.id%>')"
                href="javascript:void(0)"
                ><i class="bi bi-trash"></i
              ></a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</section>

<script>
  function confirmDeleteAgent(name, agenteId) {
    if (confirm(`Are you sure you want to delete Agent: ${name} ?`)) {
      window.location.href = `/delete-agent/${agenteId}`;
    }
  }
</script>

